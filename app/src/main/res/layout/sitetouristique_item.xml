<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
android:layout_height="match_parent">

    <TextView
        android:id="@+id/entete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance_Small"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="6dip"
        android:id="@+id/detail_sitetouritique">

        <ImageView
            android:id="@+id/image_site"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/short_description"
            android:layout_width="fill_parent"
            android:layout_height="26dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/image_site"
            android:ellipsize="marquee"
            android:text="Description"
            android:textSize="12sp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/nom_site"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/short_description"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toRightOf="@id/image_site"
            android:gravity="center_vertical"
            android:text="Example application"
            android:textSize="16sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
